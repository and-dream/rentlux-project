{% extends "base.html.twig" %}

{% block title %}Gestion des membres{% endblock %}

{% block body %}
<div class="m-2">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID membre</th>
                <th>pseudo</th>
                <th>nom</th>
                <th>prenom</th>
                <th>email</th>
                <th>civilite</th>
                <th>date enregistrement</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
            {% for membre in membres %}

                <tr>
                    <td>{{ membre.id }}</td>
                    <td>{{ membre.pseudo }}</td>
                    <td>{{ membre.nom }}</td>
                    <td>{{ membre.prenom }}</td>
                    <td>{{ membre.email }}</td>
                    <td>{{ membre.civilite }}</td>
                    <td>{{ membre.dateEnregistrement|date("d/m/Y") }}</td>
                    <td>
                        
                        <a href="{{ path('membre_modifier', {id: membre.id} ) }}" class="text-warning"><i class="bi bi-pencil"></i></a>
                        <a href="{{ path('membre_supprimer', {id: membre.id} ) }}" class="text-danger"><i class="bi bi-trash3 text-danger"></i></a>
                    </td>
                </tr>
                
            {% endfor %}
        
        </tbody>
    </table>

</div>

<div class="container mt-5">
    {{ form_start(formMembres, {
        attr: {novalidate: "novalidate"}
    }) }}

    {{ form_row(formMembres.pseudo, {
        label: "Pseudo",
        attr: {
        placeholder: 'pseudo'
    },

    }) }}

    {{ form_row(formMembres.email, {
        label: "Email",
        attr: {
        placeholder: 'email'
    },

    }) }}

    {{ form_row(formMembres.plainPassword, {
        label: "Mot de passe",
        attr: {
        placeholder: 'mot de passe'
        },
    }) }}

    {{ form_row(formMembres.civilite, {
        label: "Civilité",
        
    }) }}

    {{ form_row(formMembres.nom, {
        label: "Nom",
        attr: {
        placeholder: 'nom'
    },

    }) }}


    {{ form_row(formMembres.prenom, {
        label: "Prénom",
        attr: {
        placeholder: 'prénom'
    },
        
    }) }}

    {{ form_end(formMembres) }}
</div>
{% endblock %}