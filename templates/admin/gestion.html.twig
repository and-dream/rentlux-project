{% extends "base.html.twig" %}

{% block title %}Gestion des véhicules{% endblock %}

{% block body %}
    <div class="container mt-5">
        <table class="table table-light table-striped">
            <thead>
                <tr>
                    <th>Vehicule</th>
                    <th>Titre</th>
                    <th>Marque</th>
                    <th>Modele</th>
                    <th>Description</th>
                    <th>Photo</th>
                    <th>Prix journalier</th>
                    <th>Date Enregistrement</th>
                </tr>
            </thead>

            <tbody>
                {% for vehicule in voitures %}

                <tr>
                    <td>{{ vehicule.id }}</td>
                    <td>{{ vehicule.titre }}</td>
                    <td>{{ vehicule.marque }}</td>
                    <td>{{ vehicule.modele }}</td>
                    <td>{{ vehicule.description }}</td>
                    <td><img src="{{ asset('img/upload/' ~ vehicule.photo) }}" alt="" width="100"></td>
                    <td>{{ vehicule.prixJournalier }}</td>
                    <td>{{ vehicule.dateEnregistrement|date('d/m/Y') }}</td>
                </tr>
                    
                {% endfor %}
            </tbody>      
        </table>  
    </div>

<div class="container">
    {{ form_start(formGestion, {
        attr: {novalidate: "novalidate"}
    }) }}

    {{ form_row(formGestion.titre, {
        label: "Titre",
    }) }}

    {{ form_row(formGestion.marque, {
        label: "Marque",
    }) }}

    {{ form_row(formGestion.modele, {
        label: "Modèle",
    }) }}

    {{ form_row(formGestion.description, {
        label: "Description",
    }) }}

    {{ form_row(formGestion.photo, {
        label: "Image",
    }) }}

    {{ form_row(formGestion.prix_journalier,
    
    ) }}

    {{ form_row(formGestion.date_enregistrement) }}


    {{ form_end(formGestion) }}


</div>

{% endblock %}